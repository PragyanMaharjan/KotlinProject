<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:background="@color/black"
        android:alpha="0.7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Welcome to Paw Woof"
            android:textColor="@color/sandybrown"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At Paw Woof, we believe every dog deserves to be pampered with the best! Whether it's delicious treats, nutritious meals, or essential pet supplies, we deliver it all right to your doorstep. With a focus on quality and convenience, our mission is to make life easier for dog owners and more fun for your furry friends.

Explore our wide selection of premium products, tailored for the unique needs of your dog, and enjoy hassle-free delivery with just a few clicks. Let Paw Woof be your trusted partner in keeping your pup happy, healthy, and wagging!"
            android:textSize="16sp"
            android:textColor="@color/beige"
            android:gravity="center"
            android:textStyle="italic"
            android:paddingBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:gravity="center"
            android:text="Owner: Mr. Pragyan Maharjan"
            android:textColor="@color/sandybrown"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
